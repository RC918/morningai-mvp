
# ==== Core ====
NODE_ENV=development
APP_NAME=morningai
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Database (Supabase)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=
DATABASE_URL= # e.g. postgresql://user:pass@aws-1-us-east-2.pooler.supabase.com:5432/postgres?sslmode=require&channel_binding=disable

# Redis
REDIS_URL= # e.g. redis://default:password@redis-host:6379

# Auth / Security
JWT_SECRET=
ENCRYPTION_KEY= # 32 bytes base64 or hex for data-at-rest encryption

# Email
EMAIL_FROM="Morning AI <no-reply@morningai.me>"
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# OAuth providers (enable only those you use)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
LINE_CHANNEL_ID=
LINE_CHANNEL_SECRET=

# 2FA / TOTP
TOTP_ISSUER=MorningAI

# Billing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
TAPPAY_PARTNER_KEY=
TAPPAY_MERCHANT_ID=

# Observability
SENTRY_DSN=
LOG_LEVEL=info

# Feature Flags
FEATURE_ENABLE_HITL=true
FEATURE_ENABLE_MARKETPLACE=false
